# =============================================================================
# VitalFlow Backend Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure the values for your environment
# NEVER commit .env files with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (Required)
# -----------------------------------------------------------------------------
# PostgreSQL Example:
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name
#
# MySQL Example:
# DATABASE_URL=mysql+pymysql://username:password@hostname:3306/database_name
#
# SQL Server Example:
# DATABASE_URL=mssql+pyodbc://username:password@hostname:1433/database_name?driver=ODBC+Driver+17+for+SQL+Server
#
# SQLite Example (for local testing only):
# DATABASE_URL=sqlite:///./vitalflow.db

DATABASE_URL=

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
# Host and port for the backend server
# Default: 0.0.0.0:8000

HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# CORS CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# Example: https://frontend.hospital.local,https://backup.hospital.local
# Use * for development only (not recommended for production)

ALLOWED_ORIGINS=*

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
# Secret key for JWT tokens (if implemented)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"

SECRET_KEY=

# Staff password hash salt (if using local password storage)
# Generate with: python -c "import bcrypt; print(bcrypt.gensalt().decode())"

PASSWORD_SALT=
